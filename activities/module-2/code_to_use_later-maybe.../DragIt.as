﻿package{	import flash.display.MovieClip;	import flash.events.MouseEvent;		public class DragIt extends MovieClip	{		private var m_dragEnable:Boolean = true;				public function DragIt()		{            //trace('ENTER DragIt#DragIt');			this.buttonMode = true;			if (m_dragEnable)			{				this.addEventListener(MouseEvent.MOUSE_DOWN, drag);				this.addEventListener(MouseEvent.MOUSE_UP, drop);			}					}				public function get dragEnable():Boolean		{			return m_dragEnable;		}				public function set dragEnable(newValue:Boolean):void		{			if (m_dragEnable != newValue)			{				m_dragEnable = newValue;				if (m_dragEnable)				{					this.addEventListener(MouseEvent.MOUSE_DOWN, drag);					this.addEventListener(MouseEvent.MOUSE_UP, drop);				}				else				{					this.removeEventListener(MouseEvent.MOUSE_DOWN, drag);					this.removeEventListener(MouseEvent.MOUSE_UP, drop);				}			}		}				public function drag(event:MouseEvent):void		{			this.startDrag();			//this.removeEventListener(MouseEvent.MOUSE_DOWN, drag);		}				public function drop(event:MouseEvent):void		{			this.stopDrag();			//this.removeEventListener(MouseEvent.MOUSE_UP, drop);		}		}}