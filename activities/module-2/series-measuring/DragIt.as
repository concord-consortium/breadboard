package{	import flash.display.MovieClip;	import flash.events.MouseEvent;		public class DragIt extends MovieClip	{		private var m_dragEnable:Boolean = true;				public function DragIt()		{			this.buttonMode = true;			if (m_dragEnable)			{				this.addEventListener(MouseEvent.MOUSE_DOWN, dragIt);				this.addEventListener(MouseEvent.MOUSE_UP, dropIt);			}					}				public function get dragEnable():Boolean		{			return m_dragEnable;		}				public function set dragEnable(newValue:Boolean):void		{			if (m_dragEnable != newValue)			{				m_dragEnable = newValue;				if (m_dragEnable)				{					this.addEventListener(MouseEvent.MOUSE_DOWN, dragIt);					this.addEventListener(MouseEvent.MOUSE_UP, dropIt);				}				else				{					this.removeEventListener(MouseEvent.MOUSE_DOWN, dragIt);					this.removeEventListener(MouseEvent.MOUSE_UP, dropIt);				}			}		}				private function dragIt(event:MouseEvent):void		{			this.startDrag();			//this.removeEventListener(MouseEvent.MOUSE_DOWN, dragIt);		}				private function dropIt(event:MouseEvent):void		{			this.stopDrag();			//this.removeEventListener(MouseEvent.MOUSE_UP, dropIt);		}			}}