package{	import flash.display.MovieClip;	import flash.events.MouseEvent;	public class WireB extends MovieClip	{		public function WireB()		{			var colorWire:Shape = new Shape();			var curveFactor:Number = 25;			var wireCol = 0xFF0000;			wire.colorWireHolder.addChild(colorWire);						drawWire();						private function drawWire():void				{				colorWire.graphics.clear();				colorWire.graphics.lineStyle(12, wireCol, 1);								//subtract the x and y scale values of the colorWireHolder to make the wire line up with ends				colorWire.graphics.moveTo( (wire.side1.x - wire.colorWireHolder.x), (wire.side1.y - wire.colorWireHolder.y) ); 				//colorWire.graphics.lineTo( (wire.side2.x - wire.colorWireHolder.x), (wire.side2.y - wire.colorWireHolder.y ));				colorWire.graphics.curveTo( (wire.side2.x - wire.colorWireHolder.x - curveFactor), (wire.side2.y - wire.colorWireHolder.y - curveFactor), (wire.side2.x - wire.colorWireHolder.x), (wire.side2.y - wire.colorWireHolder.y ) );				colorWire.graphics.endFill(); 			//	trace("wire.side1.x = " + wire.side1.x + " wire.side1.y = " + wire.side1.y);			//	trace("wire.colorWireHolder.x = " + wire.colorWireHolder.x + "wire.colorWireHolder.y = " + wire.colorWireHolder.y);				}						setInterval(drawWire, 25);						wire.side1.buttonMode = true;			wire.side1.addEventListener(MouseEvent.MOUSE_DOWN, side1StartDragging);			wire.side1.addEventListener(MouseEvent.MOUSE_UP, side1StopDragging);						wire.side2.buttonMode = true;			wire.side2.addEventListener(MouseEvent.MOUSE_DOWN, side2StartDragging);			wire.side2.addEventListener(MouseEvent.MOUSE_UP, side2StopDragging);						private function side1StartDragging(event:MouseEvent) {				wire.side1.startDrag();			}						private function side1StopDragging(event:MouseEvent) {				wire.side1.stopDrag();			}						private function side2StartDragging(event:MouseEvent) {				wire.side2.startDrag();			}						private function side2StopDragging(event:MouseEvent) {				wire.side2.stopDrag();			}									wire.colorWireHolder.buttonMode = true;			wire.colorWireHolder.addEventListener(MouseEvent.MOUSE_DOWN, startDragging);			wire.colorWireHolder.addEventListener(MouseEvent.MOUSE_UP, stopDragging);			 			function startDragging(event:MouseEvent) {				wire.startDrag();			}			 			function stopDragging(event:MouseEvent) {				wire.stopDrag();			}		}	}}		