package{	import flash.display.MovieClip;	import flash.events.MouseEvent;	import flash.events.KeyboardEvent;	public class DragItShift extends MovieClip	{		var shiftOn:Boolean = false;				public function DragItShift():void		{			//this.buttonMode = true;			stage.addEventListener(KeyboardEvent.KEY_DOWN, onShift);			stage.addEventListener(KeyboardEvent.KEY_UP, offShift);					this.addEventListener(MouseEvent.MOUSE_DOWN, dragIt);			this.addEventListener(MouseEvent.MOUSE_UP, dropIt);			}				private function onShift(e:KeyboardEvent):void			{								if (e.keyCode == 16)				{					this.buttonMode = true;					shiftOn = true;				}			}					private function offShift(e:KeyboardEvent):void			{				shiftOn = false;				this.buttonMode = false;				this.stopDrag();			}				private function dragIt(event:MouseEvent):void		{			if ( shiftOn == true )			{			this.startDrag();			}			//this.removeEventListener(MouseEvent.MOUSE_DOWN, dragIt);		}				private function dropIt(event:MouseEvent):void		{			if ( shiftOn == true )			{			this.stopDrag();			}			//this.removeEventListener(MouseEvent.MOUSE_UP, dropIt);		}	}}