package{	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.events.KeyboardEvent;	public class DragItShift extends MovieClip	{		var shiftOn:Boolean = false;				public function DragItShift():void		{			//this.buttonMode = true;			if (stage != null)			{				stage.addEventListener(KeyboardEvent.KEY_DOWN, onShift);				stage.addEventListener(KeyboardEvent.KEY_UP, offShift);				}						this.addEventListener(Event.ADDED_TO_STAGE, added_to_stage_handler);			this.addEventListener(Event.REMOVED_FROM_STAGE, removed_from_stage_handler);						this.addEventListener(MouseEvent.MOUSE_DOWN, drag);			this.addEventListener(MouseEvent.MOUSE_UP, drop);			}				private function added_to_stage_handler(evt:Event):void		{			stage.addEventListener(KeyboardEvent.KEY_DOWN, onShift);			stage.addEventListener(KeyboardEvent.KEY_UP, offShift);			}				private function removed_from_stage_handler(evt:Event):void		{			stage.removeEventListener(KeyboardEvent.KEY_DOWN, onShift);			stage.removeEventListener(KeyboardEvent.KEY_UP, offShift);			}				private function onShift(e:KeyboardEvent):void			{								if (e.keyCode == 16)				{					this.buttonMode = true;					shiftOn = true;				}			}					private function offShift(e:KeyboardEvent):void			{				shiftOn = false;				this.buttonMode = false;				this.stopDrag();			}				private function drag(event:MouseEvent):void		{			if ( shiftOn == true )			{			this.startDrag();			}			//this.removeEventListener(MouseEvent.MOUSE_DOWN, dragIt);		}				private function drop(event:MouseEvent):void		{			if ( shiftOn == true )			{			this.stopDrag();			}			//this.removeEventListener(MouseEvent.MOUSE_UP, dropIt);		}	}}